#!/bin/bash
set -euo pipefail
IFS=$'\n\t'
#Unofficial Bash Strict Mode http://redsymbol.net/articles/unofficial-bash-strict-mode/

exec >>/var/log/openvpn-daemon.log
exec 2>&1

[[ -e /var/run/openvpn-daemon/pid ]] && rm -f /var/run/openvpn-daemon/pid
mkdir -p /var/run/openvpn-daemon

export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

mkdir -p /dev/net
[[ ! -c /dev/net/tun ]] && mknod /dev/net/tun c 10 200

chmod 400 /vpn/auth.txt

echo "Starting OpenVPN daemon"
exec /usr/sbin/openvpn --config /vpn/config.ovpn --redirect-gateway --auth-user-pass /vpn/auth.txt --auth-nocache